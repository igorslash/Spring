<changeSet id="002" author="dev">
    <createTable tableName="cards">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="user_id" type="BIGINT">
            <constraints nullable="false" foreignKeyName="fk_card_user" references="users(id)"/>
        </column>
        <column name="encrypted_card_number" type="VARCHAR(512)" nullable="false"/>
        <column name="card_holder" type="VARCHAR(255)" nullable="false"/>
        <column name="expiry_date" type="DATE" nullable="false"/>
        <column name="status" type="VARCHAR(50)" nullable="false"/>
        <column name="balance" type="DECIMAL(19,2)" defaultValue="0.00"/>
        <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
    </createTable>
</changeSet>